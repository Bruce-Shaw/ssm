<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 设置为UserDao接口方法提供sql语句配置 -->
<mapper namespace="com.ssm.dao.UserDao">

    <select id="getUserById" resultType="com.ssm.entity.User" parameterType="long">
        SELECT * FROM users WHERE id = #{id}
    </select>

    <select id="getUsersByPage" resultType="com.ssm.entity.User" parameterType="HashMap">
        SELECT * FROM users limit #{start}, #{end};
    </select>

    <select id="getTotalCount" resultType="int" parameterType="int">
        SELECT COUNT(1) FROM users;
    </select>

    <insert id="createUser" useGeneratedKeys="true" parameterType="com.ssm.entity.User">
        INSERT INTO users (id,name,gender,born,position,salary) VALUES (#{id},#{name},#{gender},#{born},#{position},#{salary});
        <selectKey resultType="long" order="AFTER" keyProperty="id">
            SELECT LAST_INSERT_ID() AS id
        </selectKey>
    </insert>

    <update id="updateUser" parameterType="com.ssm.entity.User">
        UPDATE users SET name=#{name},gender=#{gender},born=#{born},position=#{position},salary=#{salary} WHERE id=#{id};
    </update>

    <delete id="deleteUserById" parameterType="long">
        DELETE FROM users WHERE id=#{id}
    </delete>

    <select id="searchUsers" resultType="com.ssm.entity.User" parameterType="String">
        SELECT * FROM users WHERE name LIKE '%' #{value} '%'
    </select>
</mapper>